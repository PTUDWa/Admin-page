<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-t-85 p-b-20">
      <form
        class="login100-form validate-form"
        autocomplete="off"
        action="/account/createAdmin"
        method="POST"
      >
        <span class="login100-form-title p-b-70">
          Thêm quản trị viên
        </span>

        <div class="wrap-input100 validate-input m-t-85 m-b-35">
          <label class="control-label">Tài khoản</label>
          <input class="input100" type="text" name="username" />
          {{#if usernameExist}}
          <div class="text-danger" id="usernameError">*This username has been taken</div>
          {{/if}}
        </div>

        <div class="wrap-input100 validate-input m-t-35 m-b-35">
          <label class="control-label">Tên người quản trị</label>
          <input class="input100" type="text" name="name" />
        </div>

        <div
          class="wrap-input100 validate-input m-b-50"
          data-validate="Enter password"
        >
          <label class="control-label">Mật khẩu</label>
          <input class="input100" type="password" name="password" />
        </div>

        <div class="container-login100-form-btn">
          <button class="login100-form-btn">
            Thêm
          </button>
        </div>

      </form>
    </div>
  </div>
</div>