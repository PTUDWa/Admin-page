<link href="/custom/addProduct.css" rel="stylesheet" />

<form method="post" id="updateAdminInformation" class="form-horizontal container" style="max-width: 600px">
  <fieldset>

    <!-- Form Name -->
    <legend>Update information</legend>
    
    <!-- Text input-->
    <div class="form-group" style="display: none;">
      <label class="col-md-4 control-label" for="admin_username" >Username</label>
      <div>
        <input id="admin_username" name="username" placeholder="Username" class="form-control input-md" type="text"
          value="{{admin.username}}" readonly>
        <div class="col-md-4 control-label errorMessage" id="usernameError"></div>
      </div>
    </div>

    
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="admin_name">Name</label>
      <div>
        <input id="admin_name" name="name" placeholder="Name" class="form-control input-md" type="text"
          value="{{admin.name}}">
        <div class="col-md-4 control-label errorMessage" id="nameError"></div>
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="admin_phoneNumber">Phone number</label>
      <div>
        <input id="admin_phoneNumber" name="phoneNumber" placeholder="Phone number" class="form-control input-md" type="tel"
          value="{{admin.phoneNumber}}">
        <div class="col-md-4 control-label errorMessage" id="phoneNumberError"></div>

      </div>
    </div>
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="admin_email">Email</label>
      <div>
        <input id="admin_email" name="email" placeholder="Email" class="form-control input-md"
          type="email" min="0" value="{{admin.email}}">
        <div class="col-md-4 control-label errorMessage" id="emailError"></div>

      </div>
    </div>
    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="admin_address">Address</label>
      <div>
        <input id="admin_address" name="address" placeholder="Address" class="form-control input-md"
          type="text" value="{{admin.address}}">
        <div class="col-md-4 control-label errorMessage" id="addressError"></div>

      </div>
    </div>

    
    <div class="form-group">
      <button class="btn btn-primary" style="display: flex; align-items: center">
        Update
      </button>
    </div>

  </fieldset>
</form>

<script src="/utils/handleUpdateAdminInfo.js"></script>